{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2024",
    "lib": ["es2024"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "outDir": "build",
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "compilerOptions": {
      "noEmit": true,
    }
  }
}
